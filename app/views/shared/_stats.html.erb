<% @user ||= current_user %>
<!-- 最初に現在のユーザーを取得します -->
<!-- Homeページの場合）には@userにcurrent_userを代入するコード -->

<div class="stats">
  <a href="<%= following_user_path(@user) %>">
    <strong id="following" class="stat">
<!-- Railsは高速化のためにデータベース内で合計を計算 -->
      <%= @user.following.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    followers
  </a>
</div>
<!-- def following、def followersでshow_followに飛ばしている -->
